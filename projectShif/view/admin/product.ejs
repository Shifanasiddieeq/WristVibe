<body>
    <main style="display: flex;">

        <aside class="sidebar">
            <div class="logo">Wrist Vibe</div>
            <ul class="menu">
              <li><a href="/admin/dashboard">Dashboard</a></li>
              <li><a href="/admin/products">Products</a></li>
              <li><a href="/admin/users">Users</a></li>
              <li><a href="/admin/categories">Category</a></li>
            
            </ul>
          </aside>
       <div>
        <h1>Product Details</h1>
     
        <button id="addButton" onclick="window.location.href='/admin/addproduct'">Add Product</button>

          
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <% product.images.forEach(image => { %>
                                    <img src="<%= image %>" alt="Product Image" style="width: 50px; height: 50px;">
                                <% }) %>
                            </td>
                            <td><%= product.productName %></td>
                        
                            <td><%= product.category %></td>
                            <td>â‚¹<%= product.price.toFixed(2) %></td>
                            <td><%= product.stockCount %></td>
                            
                            <td>
                                <button id="editButton" onclick="window.location.href='/admin/editproduct/<%= product._id %>'">Edit </button>
    
                            </td>
                                    <td>
                                        <form action="/admin/products/<%= product._id %>/list-unlist" method="POST">
                                            <button type="submit">
                                                <%= product.isListed ? 'Unlist' : 'List' %>
                                            </button>
                                        </form>
                                    </td>
                                    
                            <!-- </td> -->
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="/admin/products?page=<%= currentPage - 1 %>">Previous</a>
                <% } %>
            
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/products?page=<%= i %>" 
                       class="<%= i === currentPage ? 'active' : '' %>">
                       <%= i %>
                    </a>
                <% } %>
            
                <% if (currentPage < totalPages) { %>
                    <a href="/admin/products?page=<%= currentPage + 1 %>">Next</a>
                <% } %>
            </div>
       </div>

   
    </main>
  

